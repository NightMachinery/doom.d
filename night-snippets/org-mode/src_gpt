res = openai_chat_complete(
    model="gpt-3.5-turbo",
    messages=[
        {"role": "system", "content": """You are a helpful assistant."""},
        {"role": "user", "content": """$0"""},
    ],
    temperature=0,
    interactive=True,
)

chatml_response_process(res, copy_mode="default")
